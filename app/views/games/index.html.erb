<h1>List of games</h1>

<table>
<% @games.each do |game| %>
    <tr>
        <td>Game #<%= game.id %>. <%= pluralize(game.lives, 'life') %> remaining. Secret word is "<%= game.secret %>".</td>
        <td><%= link_to 'Join', game_path(game) %></td>
    </tr>
<% end %>
</table>

<%= link_to 'Create a new game', new_game_path %>
